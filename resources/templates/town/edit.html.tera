{% extends "base" %}

{% block content %}
    <p><h1>Edit Town: {{ name }}</h1></p>
    <div class="text">
      <p><b>Id:</b> {{ id }}</p>
      <form action="/town/update/{{ id }}" method="post">
        <b><label for="name">Name:</label></b>
        <input type="text" id="name" name="name" value="{{ name }}">
        {% if name_error %}<br><label class="error">{{ name_error }}</label>{% endif %}
        <br>
        <br>
        <b>Width:</b>
        <input type="number" step="1" id="width" name="width" value="{{ width }}" min="1" max="1000" >
        <br>
        <br>
        <b>Height:</b>
        <input type="number" step="1" id="height" name="height" value="{{ height }}" min="1" max="1000" >
        <br>
        <br>
        <input type="submit" value="Submit">
      </form>
      <p><a href="/town/details/{{ id }}">Back</a></p>
    </div>
{% endblock content %}
