{% extends "base" %}

{% block content %}
    <p><h1>Edit Mountain: {{ name }}</h1></p>
    <div class="text">
      <p><b>Id:</b> {{ id }}</p>
      <form action="/mountain/update/{{ id }}" method="post">
        <b><label for="name">Name:</label></b>
        <input type="text" id="name" name="name" value="{{ name }}">
        {% if name_error %}<br><label class="error">{{ name_error }}</label>{% endif %}
        <br>
        <br>
        <input type="submit" value="Submit">
      </form>
      <p><a href="/mountain/details/{{ id }}">Back</a></p>
    </div>
{% endblock content %}
